@model Election.Web.Models.CandidateViewModel

<h4>City</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCandidate" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EventId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Proposal" class="control-label"></label>
                <textarea asp-for="Proposal" class="form-control" ></textarea>
                <span asp-validation-for="Proposal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InscriptionDate" class="control-label"></label>
                <div class="input-group date" data-provide="datepicker">
                    <input asp-for="InscriptionDate" class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                <span asp-validation-for="InscriptionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

